a, a:link
  cursor pointer
  color royalblue 

a:hover
  color #888888

body
  font-size 1.0em
  line-height: 1.5em
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
  padding-top: 40px
  text-rendering optimizeLegibility
  -moz-osx-font-smoothing grayscale
  font-feature-settings "kern" 1
  font-kerning auto

h1, h2, h3
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
  font-weight: 500

h1
  font-size: 30pt
  margin 0 0 20px 0
  line-height 42pt
  font-weight: 400

h1 a
  color black

h2
  font-size 18pt
  margin: 0 0 20px 0

.sidebar h2
  font-size 14pt
  margin 20px 0 0 0

.top-buffer
  padding-top 30px

.paper
  font-size 0.9em

.paper-break
  border 1px solid transparent

dl
  margin 0
  padding 0

.sidebar
  dt, dd
    font-size 1.1em
    line-height 1.5em

  dt
    margin: 0

  dd
    margin: 0 0 1.3em 0
    p
      margin 0
      padding 0
    p:first-of-type
      font-style italic

  dl.compact
    display: grid;
    //grid-template-columns min-content 1fr
    grid-template-columns min-content
    row-gap 10px
    column-gap 6px

    //grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    //grid-template-rows: repeat(auto-fill,  1fr);

    dt
      //grid-column: 1;
      line-height 1em
      margin 0
      padding 0

    dd
      //grid-column: 2
      line-height 1em
      margin 0
      padding 0

  @media only screen and (min-width: 980px)
    dl.compact
      grid-template-columns min-content 1fr
      //grid-template-columns: 47.5% 47.5%;

.navigation.affix
    position fixed
    top 0px

#maincontent ul li
    list-style-type none
    padding 2px
    color #888888

#maincontent ul
    font-size 12pt
    border-left 5px solid #888888
    padding-left 15px

pre
  padding 0
  background white

p
  padding-top 5px
  padding-bottom 5px

ol li, ul li
  line-height 18pt
  padding 3px

.navlist ul, .navlist li, .navlist
  display inline
  font-size 14pt
  margin 0

.navlist li:after
  content ","

.navlist li:first-child:before
  content "Below: "

.navlist li:last-child:before
  content "and "

.navlist li:last-child:after
  content "."

#jobmarket
  color white
  border 1px solid white
  // border-radius 10px !important
  padding 3px 13px
  background royalblue
  // background: tint(#0088cc, 30%);  /* fallback for old browsers */
  // background: -webkit-linear-gradient(to right, tint(#0088cc, 30%), mix(tint(#9370DB, 30%), tint(#0088cc, 30%), 75%));  /* Chrome 10-25, Safari 5.1-6 */
  // background: linear-gradient(to right, tint(#0088cc, 30%), mix(tint(#9370DB, 30%), tint(#0088cc, 30%), 75%)); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */


#jobmarket p
  margin: 3px 0

#jobmarket a
  color white
  text-decoration underline

#highlights .item
  border 1px solid #ccc
  box-sizing border-box
  padding: 0 10px 10px 10px
  margin-bottom: 10px
  transition border-color 300ms ease;

  &:hover
    border-color #0088cc

  & p
    margin 0 0 6px 0
    padding 0
    font-size 0.9em

  & div
    margin-bottom 6px

  & h3
    margin-bottom 6px360 v

    & a
      color black

  & h4 
    font-weight normal
    font-style italic
    font-size 0.9em
    //text-align right

.highlight-description
  font-size 11pt
  color #85738c
  line-height 20px

h3
  line-height 1.3em
  font-size 1.1em

#contact
  & h1 
    font-size 24pt
    line-height normal
  
  & p
    margin 0
    font-size 12pt
    line-height: normal

@media (max-width: 767px) 
  .headshot-img
    max-width 200px

.roundrect
  border-radius 18px

.header-name
  font-size 28pt
